modules = ["python-3.11"]

[nix]
channel = "stable-25_05"
packages = ["glibcLocales"]

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "app.py", "--server.port", "5000"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Weather Monitoring App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Persistent Weather Collection"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Simple Weather App"

[[workflows.workflow]]
name = "Weather Monitoring App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run app.py --server.port 5000"
waitForPort = 5000

[[workflows.workflow]]
name = "Persistent Weather Collection"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python persistent_weather_service.py"

[[workflows.workflow]]
name = "Simple Weather App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run simple_app.py --server.port 5001"
waitForPort = 5001

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000

[agent]
integrations = ["web_scraper==1.0.0"]
